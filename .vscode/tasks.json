{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "type": "shell",
      "command": "npx ava --watch",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen",
      }
    },
    {
      "label": "Update Snapshot",
      "type": "shell",
      "command": "npx ava --update-snapshots",
      "group": "none",
      "runOptions": {
          "runOn": "folderOpen",
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "npm install",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
          "runOn": "folderOpen",
      }
    }
  ]
}