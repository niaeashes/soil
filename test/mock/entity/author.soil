entity Author {

  field id: Integer

  mutable field name: String? {

    - Author's name

    - Description of name field

    - @todo Sample Comment

    example [
      "Umeebe, Inc."
    ]
  }

  mutable field records: List<Record>

  inner Record {
    - Author's history / biography record

    field timestamp: Timestamp
    field body: String
  }

  mutable field contact: * {

    schema {
      field tel: String?
      field email: String?
    }
  }

  endpoint GET /authors {

    - List Authors

    success {
      field authors: List<Author>
    }
  }

  endpoint PUT /authors/$id {

    - Update Author

    request {
      field author: Author
    }

    success {
      field author: Author
    }
  }

  endpoint GET /authors/$filter {

    parameter filter: Enum [ 10+, 5+, all, latest ]

    success {
      field authors: List<Author>
    }
  }
}